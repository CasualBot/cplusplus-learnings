{
    "version": "2.0.0",
    "windows": {                    
        "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${fileDirname}\\*.cpp",
            "-o",
            "${workspaceFolder}\\builds\\${fileBasenameNoExtension}.exe"
        ],
    },
    "linux": {
        "type": "shell",
        "echoCommand": true,
        "command": "/usr/bin/aarch64-linux-gnu-g++",
        "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${fileDirname}/*.cpp",
            "-o",
            "${workspaceFolder}/builds/${fileBasenameNoExtension}"
        ],
        "options": {
            "cwd": "/usr/bin"
        },
        "problemMatcher": [
            "$gcc"
        ]
}